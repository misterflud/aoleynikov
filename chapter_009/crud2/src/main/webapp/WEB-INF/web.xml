<web-app>
	
	<filter>
		<filter-name>AuthFilter</filter-name>
		<filter-class>ru.job4j.controller.AuthFilter</filter-class> 
	</filter>
    
    <filter-mapping>
        <filter-name>AuthFilter </filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>UsersController</servlet-name>
        <servlet-class>ru.job4j.controller.UsersController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>UsersController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>UserJsonController</servlet-name>
        <servlet-class>ru.job4j.controller.UserJsonController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>UserJsonController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>



